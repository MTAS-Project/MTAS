<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mtas.SaveCurrentReception"
    tools:ignore="MergeRootFrame" 
    android:background="#4affa71e">

    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/receptionTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/receptionTextView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#ff009f4b"
        android:onClick="saveReception"
        android:text="        Save Reception       "
        android:textColor="#ffffffff" />
    
</RelativeLayout>

